@model HospitalERP.Models.Doctor
@{
    ViewData["Title"] = "AddDoctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="content-wrap">
        <div class="main">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8 p-r-0 title-margin-right">
                        <div class="page-header">
                            <div class="page-title">
                                <h1>Hello, <span>Welcome Here</span></h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 p-l-0 title-margin-left">
                        <div class="page-header">
                            <div class="page-title">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                                    <li class="breadcrumb-item active">Doctor</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <section id="main-content">                   
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-title">
                                    <h4>Add Doctor</h4>                                    
                                </div>
                                <div class="card-body">
                                    <div class="basic-elements">
                                        <form asp-action="AddDoctor" method="post">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Firstname</label>
                                                        <input type="text" class="form-control" value="" placeholder="Firstname" asp-for="D_Firstname">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Middlename</label>
                                                        <input type="text" class="form-control" placeholder="Middlename" asp-for="D_Middlename">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Lastname</label>
                                                        <input class="form-control" type="text" value="" asp-for="D_Lastname">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Address</label>
                                                        <textarea class="form-control" rows="4" placeholder="Address" asp-for="D_Address"></textarea>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Phone No</label>
                                                        <input class="form-control" type="text" value="" asp-for="D_Phone">
                                                    </div>

                                                </div>
                                                <div class="col-lg-6">
                                                     <div class="form-group">
                                                        <label>Speciality</label>
                                                        <select class="form-control" asp-for="D_Speciality">
															<option>Ophthalmologists</option>
															<option>Obstetrician</option>
															<option>Cardiologists</option>
															<option>Endocrinologists</option>
															<option>Gastroenterologists</option>
														</select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Date Of Employment</label>
                                                       <input class="form-control" type="date" value="" asp-for="D_Dob">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Username</label>
                                                       <input class="form-control" type="text" asp-for="Username">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Password</label>
                                                       <input class="form-control" type="password" asp-for="Password">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Confirm Password</label>
                                                       <input class="form-control" type="text" >
                                                    </div>

                                                      <input type="submit" value="Save" class="btn btn-block btn-primary">
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="footer">
                                <p>2022 © Admin Board. - <a href="#">Grailtech.com</a></p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>





